    script(type='text/javascript').
      $("#btn").click(function(){
      var name = $('#name').val();
      var tel = $('#tel').val();
      var email = $('#email').val();
      var content = $('#content').val();
      if(name==''){
      alert('請填入您的姓名');
      return false;
      }
      if(tel==''){
      alert('請填入您的聯絡電話或手機');
      return false;
      }
      if(email==''){
      alert('請填入您的電子信箱');
      return false;
      }
      if(content==''){
      alert('請填入您想諮詢的內容');
      return false;
      }
      $.ajax({
      url: "contact_mail.php",
      dataType: "json",
      data: {name:name,tel:tel,email:email,content:content,t: Math.random()},
      success: function (data) {
      if(data==1) {//成功
      alert('我們已收到您的諮詢，我們將有專人為您服務');
      location.href='about.html';
      }else{
      alert('發信失敗，原因:'+data);
      }
      }
      });
      });
